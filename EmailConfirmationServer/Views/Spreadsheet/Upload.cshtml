@model IQueryable<EmailConfirmationServer.Models.Person>
@{
    ViewBag.Title = "Manage Spreadsheet";
}

<h2>Please upload your spreadsheet</h2>
@using (Html.BeginForm("Upload", "Spreadsheet", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label for="file">Upload File:</label>
    <input type="file" name="file" id="file" /><br><br>
    <input type="submit" value="Submit" />
    <br><br>

}
<h2>@ViewBag.Message</h2>
<div class="row">

        <h2>Unconfirmed Emails</h2>
        <div class="col-1">
            <table style="width:50%">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Outlook Email</th>
                        <th>St Martin Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model)
                    {
                        <tr>
                            <td>@person.FirstName</td>
                            <td>@person.LastName</td>
                            @foreach (var email in person.Emails)
                            {
                                if (!email.IsConfirmed)
                                {
                                    <td>@email.EmailAddress</td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

</div>

