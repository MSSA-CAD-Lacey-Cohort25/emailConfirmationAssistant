@model IQueryable<EmailConfirmationServer.Models.Person>
@{
    ViewBag.Title = "Manage Spreadsheet";
}

<h2>Please upload your spreadsheet</h2>
@using (Html.BeginForm("Upload", "Spreadsheet", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label for="file">Upload File:</label>
    <input type="file" name="file" id="file" /><br>
    <input type="submit" value="Submit" /><br>
}
<h2>@ViewBag.Message</h2>

<div id="tableHolder">
    
</div>

<button class="btn btn-primary" id="unconfirmed">Show Unconfirmed</button>
<button class="btn btn-primary" id="confirmed"> Show Confirmed </button>

@section Scripts
{
    <script>
        $(document).ready(function(){
            $("#unconfirmed").click(function () {
                $("#tableHolder").load('@Url.Action("LoadUnconfirmedTable")')
                })
        })

        $(document).ready(function(){
            $("#confirmed").click(function () {
                $("#tableHolder").load('@Url.Action("LoadConfirmedTable")')
                })
        })
    </script>
    }